alignlen = 64
offload = 1
arch = sse
prefix = /Users/jhammond/eclipse/GTFOCK/

CC  = gcc -std=gnu99
CXX = g++
FC  = gfortran
AR  = ar rcs

ifeq "${arch}" "mic"
OPTFLAGS = -mmic -no-opt-prefetch
else ifeq "${arch}" "avx"
OPTFLAGS = -m64 -xAVX
else
OPTFLAGS = -m64 -mtune=native
endif

OPTFLAGS += -D__ERD_PROFILE__
